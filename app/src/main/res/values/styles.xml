<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottomNavigationFont"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/iransans_fanum_light</item>
    </style>

    <style name="TextAppearance.Regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/iransans_fanum</item>
    </style>

    <style name="TextAppearance.Bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/iransans_fanum_bold</item>
    </style>

    <style name="TextAppearance.Light" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/iransans_fanum_light</item>
    </style>


    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/iransans_fanum_medium</item>
    </style>

    <style name="TextAppearance.UltraLight" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/iransans_fanum_ultra_light</item>
    </style>




</resources>
